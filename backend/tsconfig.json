{
  "extends": "../tsconfig.base.json",
  "include": ["./src/**/*.ts", "./src/**/*.json"],
  "type":"module",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "declarationDir": "./build",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "exclude": ["test/**/*.ts"]
}
