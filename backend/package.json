{
  "name": "backend",
  "version": "1.0.0",
  "description": "REST API for Archelec",
  "author": "OuestWare",
  "main": "./build/index.js",
  "scripts": {
    "start": "npm run generate && tsc-watch --onSuccess 'nodemon ./build/index.js'",
    "test": "LOG_CONSOLE_LEVEL='debug' nyc --reporter=html --reporter=text mocha --exit -r ts-node/register test/{,**/}*.test.ts",
    "serve": "npm run generate && tsc-watch --onSuccess 'nodemon ./build/index.js'",
    "build": "npm run generate && tsc",
    "generate": "npm run generate:routes && npm run generate:spec",
    "generate:spec": "tsoa spec",
    "generate:routes": "tsoa routes -c ./tsoa.json",
    "lint": "eslint  ./src/ --ext .ts"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.17.13",
    "@hapi/boom": "^10.0.1",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "p-limit": "^3.1.0",
    "swagger-ui-express": "5.0.0",
    "tslib": "^2.6.2",
    "tsoa": "^5.1.1",
    "typescript-ioc": "^3.2.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.14.202",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.3.2"
  }
}
